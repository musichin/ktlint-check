{
  "name": "ktlint-check",
  "version": "1.0.0",
  "description": "GitHUb action for ktlint",
  "main": "lib/main.js",
  "scripts": {
    "compile": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "build": "ncc build --source-map --license licenses.txt",
    "package": "npm run compile && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/musichin/ktlint-check.git"
  },
  "author": "Anton Musichin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/musichin/ktlint-check/issues"
  },
  "homepage": "https://github.com/musichin/ktlint-check",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "@vercel/ncc": "0.34.0",
    "eslint": "8.28.0",
    "eslint-config-google": "0.14.0",
    "jest": "^29.0.2",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.0",
    "typescript": "^4.8.3"
  }
}
